{
  "name": "simple-graphql",
  "version": "2.4.2",
  "description": "The simple way to generates GraphQL schemas and Sequelize models from your models definition.",
  "main": "lib/index.js",
  "scripts": {
    "format": "standardx --fix src/**.ts",
    "test": "jest",
    "demo": "babel-node demo/index.js",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "build": "rm -rf lib && babel src --out-dir lib/ && cp package.json lib/ && npm run build-dot-flow",
    "build-dot-flow": "find ./src -name '*.js' | while read filepath; do cp $filepath `echo $filepath | sed 's/\\/src\\//\\/lib\\//g'`.flow; done",
    "buildAndPublish": "npm run format && npm run build && npm publish"
  },
  "author": "logerzhu",
  "repository": {
    "type": "git",
    "url": "git@github.com:logerzhu/simple-graphql.git"
  },
  "bugs": {
    "url": "https://github.com/logerzhu/simple-graphql/issues"
  },
  "homepage": "https://github.com/logerzhu/simple-graphql",
  "license": "MIT",
  "keywords": [
    "GraphQL",
    "ORM",
    "Relay",
    "Sequelize",
    "MySQL",
    "PostgreSQL",
    "SQLite",
    "MSSQL"
  ],
  "dependencies": {
    "@babel/runtime": "^7.4.3",
    "@types/bluebird": "^3.5.29",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.8",
    "@types/validator": "^12.0.1",
    "continuation-local-storage": "^3.2.1",
    "dataloader": "^2.0.0",
    "lodash": "^4.17.10",
    "lru_map": "^0.3.3",
    "moment": "^2.22.2",
    "sequelize": "^5.7.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "eslint-plugin-flowtype": "^3.6.1",
    "express": "^4.16.4",
    "express-graphql": "^0.9.0",
    "flow-bin": "^0.97.0",
    "graphql": "^14.1.1",
    "graphql-relay": "^0.6.0",
    "jest": "^25.1.0",
    "mysql2": "^1.5.3",
    "pre-commit": "^1.2.2",
    "sqlite3": "^4.1.1",
    "standardx": "^5.0.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "/dist/",
      "/flow-typed/",
      "/docs/"
    ]
  }
}
